package day1219;

class Orange {
	
	private String name;
	private String color;
	private int age;
	
	//생성자
	
	Orange(){
		
		
//		this.name="이말자";
//		this.color="노랑";
//		this.age=30;

		this("이말자","노랑");//생성자에서 다른 생성자 호출시 this()호출
	}
	
	Orange(String name,String color){
		
		this.name=name;
		this.color=color;
		this.age=30;
	
	}
	public void writeMember() {
		
		System.out.println("name="+name+",color="+color+",age="+age);
	}
	public void writeMember(int n) {
		
		if(n==1) {
			System.out.println("이름 : "+name);
			System.out.println("좋아하는 색상 : "+clor);
			System.out.println("나이 : "+age);
			System.out.println("*".repeat(20));
		}
		
	}
	
}
public class Ex4Constructor {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Orange a1=new Orange();
		a1.writeMember();
		
		Orange a2=new Orange("고민시", "파랑");
		a2.writeMember();
	}

}
