package day1223;

import javax.swing.JButton;
import javax.swing.JFrame;

class MyFrame extends JFrame {
	//멤버변수로 버튼을 생성
	JButton btn1=new JButton();
	
	
	public MyFrame() {
		// TODO Auto-generated constructor stub
		super(); //생략가능
		
		this.setBounds(300, 100, 300, 300); //x,y,width,height
		
		//버튼 위치 지정
		
		
		//버튼 이벤트
		
		this.setVisible(true); // true 프레임이 보인다. ->false 는 프레임을 숨긴다.
		//아래 메서드가 없을경우 x를 눌러서 프레임을 닫으면 그냥 프레임 숨김만 된다.(console이 계속 실행)		
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);//실제 프로그램 종료
	}
}



public class Ex6JFrame {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		MyFrame my=new MyFrame();
		
		
		
	}

}
