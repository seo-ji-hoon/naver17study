package day1213;

import java.util.Scanner;

public class Ex9While {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		/*
		 * 
		 * 1글자씩 입력하다가 x(대소문자 상관없음)를 입력하면 빠져나와서
		 * 입력한 데이터들을 분석한 결과를 출력하시오.
		 * 
		 * 대문자:3
		 * 소문자:4
		 * 숫자:3
		 * 
		 */
		char ch;
		
		System.out.println("입력을하세요");
		ch=sc.nextLine().charAt(0);
		if((65<=ch)&(ch<=90))//char코드가 65이상 90이하일떄
		{
			System.out.println("대문자이군요");
		}
		if((97<=charCode)&(charCode<=122))//char코드가 97이상 122이하일떄
		{
			System.out.println("소문자이군요");
		}
		if((48<=charCode)&(charCode<=57))//char코드가 48이상 57이하일떄
		{
			System.out.println("0~9 숫자이군요");
		}
	}

}
