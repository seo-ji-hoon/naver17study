package day1213;

import java.util.Scanner;

public class Ex8While {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		
		/*
		 * 숫자(n)을 입력하면 1부터 n까지의 합계
		 * 합계(sum)을 구해서 출력하시오.
		 * 
		 * 예시) 100입력시
		 * 1부터 100까지의 합계는 5050입니다. (printf)
		 * 		 *
		 */
		
		int n,sum,total;
		
		System.out.println("숫자를 입력하세요");
		n=sc.nextInt();
		
		while(true)
		{	
			if(n<0 || n>100) //점수가 0보다 크고 점수가 100보다 작을때
			{
				System.out.println("\t잘못입력된 점수입니다.");
				continue; //다시 처음으로 (조건식)이동
			}
			
			if(n==0) //점수가 0이랑 같을때
				break; // 종료
			n++; //갯수 저장
			sum+=n; //입력한 점수와 토탈을 저장*
		}
		
		System.out.println("총 입력한 점수갯수"+n);
		System.out.println("점수의 총 합계"+num);
		System.out.printf("점수들의 평균 : %5.2f\n",avg);
	}
		
	}

}
