package day1219;
/*
 * CallByValue : 값만 전달(기본형,String)
 * CallByReference : 주소가 전달 (모든 객체,배열타입)
 * 
 */
class Test {
	
	String message;
	int code;
}

///////////////////////////
public class Ex5CallBy {
	
	public static void changeInt(int n ) {//주소가 다르게 새로 생성
		
		n=200;
	}
	
	public static void changeSring(String s) {
		
		s="apple";
	}
	
	public static void cahgeString(Test t) {
		t.message="Happy";
		t.code=100;
	}
	
	public static void chageArray(int []arr) {
		
		arr[1]=20;
		
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n=100;
		changeInt(n);
		System.out.println("n="+n);//값만 전달
		
		String s="Berry";
		changeSring(s);
		System.out.println(s); //값만 전달
		
		
		Test t=new Test();
		System.out.println("message = "+t.message+",code = "+t.code);
		chanegTest(t); //주소가 전달
		System.out.println("message = "+t.message+",code = "+t.code);
		
		//배열
		int []a= {5,8,11};
		chageArray(a);
		for(int aa:a) {
			System.out.println(aa+" ");
		}
		System.out.println();
			
	}

}
