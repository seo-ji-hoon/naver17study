package day1218;

import java.util.Scanner;

public class Ex5ArrayBinggo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		/*
		 * 3행3열의 2차원 배열을 생성후 1~3사이의 난수를 발행하여
		 * 가로,세로,각 대각선을 비교하여 같은 값이 나오면 빙고 : 2개 이런식으로 출력
		 * 없을경우 "꽝" 출력
		 * 
		 * 엔터를 누를떄마다 다시 난수 발생
		 * 
		 * q나 Q를 누르면 프로그램 종료
		 */
		
		int [][]puzzle=new int[3][3]; //3행3열
		int binggo;
		
		while(true) {
		
		//2차원 배열에 1~3 사이의 난수 발생
			for(int i=0; i<puzzle.length;i++) {
				
				for(int j=0; j<puzzle[i].length; j++) {
					
					puzzle[i][j]=(int)(Math.random()*3)+1;
				}
				
			}
		
		//출력
			for(int i=0; i<puzzle.length;i++) {

				for(int j=0; j<puzzle[i].length; j++) {

					System.out.println();
										
				}
				System.out.println();

			}
		
		//가로,세로,대각선 비교하여 같은숫자가 나온갯수 출력		
		//없으면 꽝 출력
		 binggo=0; //빙고수 계산
		 
		
			
		if(binggo==0) {
			System.out.println("\t꽝!!!!");
		}
		else {
			System.out.println("\t\t빙고"+binggo+"개");
		}
			
		
		//q(대소문자 상관없음) 입력시 종료
		if(sc.nextLine().equalsIgnoreCase("q")) {
			System.out.println("프로그램을 종료합니다.");
			break;
		}
		System.out.println("-".repeat(20));
		}
	}

}
