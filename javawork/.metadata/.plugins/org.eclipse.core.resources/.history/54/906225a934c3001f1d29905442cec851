	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		
		Ex1SawonArrayList ex1=new Ex1SawonArrayList(); //호출
		
		int menu=0;
		
		while(true) {
			
			//제목 출력
			System.out.println("사원메뉴관리");
			System.out.println("1.사원정보추가");
			System.out.println("2.사원정보검색");
			System.out.println("3.사원삭제");
			System.out.println("4.전체사원출력");
			System.out.println("5.저장후 종료");
			System.out.println("번호를 선택하세요 :");
			System.out.println();
			
			//예외 try-catch
			try {
				menu=Integer.parseInt(sc.nextLine());
			}catch (NumberFormatException e) {
				menu=4; //문자입력시 4번으로 나오게 한다.
			}
			
			switch (menu) {
			
				case 1->{
					//사원추가
					System.out.println("사원명은 ?");
					String name=sc.nextLine();
					System.out.println("나이는?");
					int age=Integer.parseInt(sc.nextLine());
					System.out.println("핸드폰은?");
					String hp=sc.nextLine();
					System.out.println("주소는?");
					String addr=sc.nextLine();
					
					//사원객체 생성
					Sawon sawon=new Sawon(name, age, hp, addr);
					//메서드 호출
					ex1.addSawon(sawon);
				
				}
				case 2->{

				}
				case 3->{

				}
				case 4->{

				}
				default->{
				ex1.sawonFileSave();
				System.out.println("사원정보를 파일에 저장후 종료합니다.");
				System.exit(0);
				}
			}
			System.out.println("-".repeat(40));
			
			
		}
		

	}

}
